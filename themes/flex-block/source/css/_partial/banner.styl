.banner-container
  position: relative
  display: flex
  align-items: center
  justify-content: center
  width: 100%
  min-height banner-height
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  padding-bottom: banner-margin

  &:before
    position: absolute
    top: 0
    left: 0
    display: block
    content: ''
    width: 100%
    height: 100%
    opacity: 0.4
    background-color: #394245
    background-image: linear-gradient(234deg, #394245 0%, #000 100%)

  .banner-inner
    position: relative
    padding: 0 25px
    color: #ffffff
    text-align: center

    .header-title
      font-weight: 700
      line-height: 1.2

      a
        display: block
        text-align: center
    
    .header-subtitle
      margin: 20px 0


// desktop >=768
@media screen and (min-width: 768px)
  .header-title
    font-size: font-desktop-large
  .header-subtitle
    font-size: font-desktop-commonly

// mobile 768<
@media screen and (max-width: 767px)
  .header-title
    font-size: font-mobile-large
  .header-subtitle
    font-size: font-mobile-commonly
  .banner-container
    min-height: banner-height-mobile
